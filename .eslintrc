{
    "extends": [
        "react-app",
        "airbnb"
    ],
    "env": {
        "jest": true,
        "browser": true
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/jsx-curly-spacing": [
            "error",
            {
                "when": "always"
            }
        ],
        "function-paren-newline": [
            "error",
            "consistent"
        ],
        "jsx-a11y/label-has-for": [
            "error",
            {
                "required": {
                    "some": [
                        "nesting",
                        "id"
                    ]
                }
            }
        ],
        "import/no-extraneous-dependencies": "off",
        "jsx-a11y/href-no-hash": "off",
        "jsx-a11y/anchor-is-valid": [
            "warn",
            {
                "aspects": [
                    "invalidHref"
                ]
            }
        ]
    }
}
